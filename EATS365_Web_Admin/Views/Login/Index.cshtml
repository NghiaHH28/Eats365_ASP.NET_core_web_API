@model EATS365_Library.DTO.LoginDTO

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Login</title>
    <link rel="stylesheet" href="~/css/base.css" type="text/css">
    <link rel="stylesheet" href="~/css/login.css" type="text/css">
</head>

<div class="container-fluid wrapper">
    <div class="container-fluid-form">
        <div class="container wrapper-form">
            <form asp-action="Login">
                <div class="form-heading-group">
                    <i class="fa-sharp fa-solid fa-right-to-bracket"></i>
                    <h2 class="form-heading ">LOGIN</h2>
                    <p class="form-text-caption">Please login your account to shopping!</p>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-control-group">
                    <label asp-for="AccountEmail" class="control-label">Email: </label>
                    <input asp-for="AccountEmail" class="form-control" />
                    <span asp-validation-for="AccountEmail" class="text-danger"></span>
                </div>
                <div class="form-control-group">
                    <label asp-for="AccountPassword" class="control-label">Mật Khẩu: </label>
                    <input asp-for="AccountPassword" class="form-control" type="password" />
                    <span asp-validation-for="AccountPassword" class="text-danger"></span>
                </div>
                <div class="form-control-group form-caption">
                    <div class="form-text-caption">
                        Please check your information correctly!
                </div>
                </div>
                @if (TempData.ContainsKey("ErrorMessage"))
                {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                }
                <div class="form-group">
                    <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
